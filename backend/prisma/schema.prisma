// ============================================
// Prisma Schema - AI Caller SaaS
// ============================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ USER & AUTH ============

enum Plan {
  FREE
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

enum AgentMode {
  INBOUND
  OUTBOUND
  HYBRID
}

enum CommunicationChannel {
  VOICE_ONLY
  MESSAGING_ONLY
  OMNICHANNEL
}

enum MessageType {
  SMS
  MMS
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  QUEUED
  SENT
  DELIVERED
  FAILED
  UNDELIVERED
  RECEIVED
}

enum AssetCategory {
  IMAGE
  DOCUMENT
  VIDEO
  OTHER
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  ACTIVE
  PAUSED
  COMPLETED
  CANCELLED
}

enum LeadStatus {
  PENDING
  SCHEDULED
  CALLING
  COMPLETED
  FAILED
  SKIPPED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  
  // Subscription
  plan          Plan      @default(FREE)
  minutesUsed   Int       @default(0)
  minutesLimit  Int       @default(100)
  
  // Billing
  stripeCustomerId String? @unique
  creditsBalance   Decimal @default(0) @db.Decimal(10, 2)
  
  // Business Profile
  organizationName    String?
  industry            String?
  businessDescription String?   @db.Text
  businessProfileComplete Boolean @default(false)
  
  // Twilio Integration (BYOT - Bring Your Own Twilio)
  twilioAccountSid    String?   @map("twilioaccountsid") // User's Twilio Account SID
  twilioAuthToken     String?   @map("twilioauthtoken") // User's Twilio Auth Token (encrypted)
  twilioMessagingServiceSid String? @map("twiliomessagingservicesid") // Optional Messaging Service SID for A2P 10DLC
  twilioConfigured    Boolean   @default(false) @map("twilioconfigured")
  
  // Relations
  agents        Agent[]
  calls         Call[]
  phoneNumbers  PhoneNumber[]
  contacts      Contact[]
  apiKeys       ApiKey[]
  usageMetrics  UsageMetric[]
  calendarIntegrations CalendarIntegration[]
  messages      Message[]
  conversations Conversation[]
  assets        Asset[]   // User's uploaded media assets
  campaigns     Campaign[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([email])
}

model ApiKey {
  id        String    @id @default(cuid())
  key       String    @unique
  name      String
  lastUsed  DateTime?
  expiresAt DateTime?
  
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime  @default(now())
  
  @@index([key])
  @@index([userId])
}

// ============ AGENTS ============

model Agent {
  id              String    @id @default(cuid())
  name            String
  description     String?
  
  // Voice Configuration
  voiceProvider   String    @default("elevenlabs")
  voice           String    @default("EXAVITQu4vr4xnSDxMaL")
  voiceSettings   Json?
  
  // LLM Configuration
  llmProvider     String    @default("openai")
  llmModel        String    @default("gpt-4o")
  systemPrompt    String    @db.Text
  temperature     Float     @default(0.7)
  maxTokens       Int       @default(150)
  
  // Behavior
  greeting        String?   @db.Text
  interruptible   Boolean   @default(true)
  interruptThreshold Int    @default(500)
  maxCallDuration Int       @default(600)
  endCallPhrases  String[]  @default([])
  transferNumber  String?
  
  // Mode Configuration
  mode            AgentMode @default(INBOUND)
  outboundGreeting String?   @db.Text
  callTimeout      Int       @default(600)
  retryAttempts    Int       @default(0)
  callWindowStart  String?
  callWindowEnd    String?
  
  // Business Context
  personaName     String?   // e.g., "Sarah" - the name the agent uses
  callPurpose     String?   @db.Text // e.g., "Schedule dental cleaning appointments"
  
  // Template
  template        String?
  
  // Communication Channel Configuration
  communicationChannel  CommunicationChannel @default(VOICE_ONLY)
  
  // Messaging-specific Configuration
  messagingGreeting     String?   @db.Text  // Initial SMS greeting
  messagingSystemPrompt String?   @db.Text  // Different prompt for text context
  
  // Media Tool Access (for messaging-capable agents)
  imageToolEnabled      Boolean   @default(false)  // Can send images (product photos, screenshots)
  documentToolEnabled   Boolean   @default(false)  // Can send PDFs, contracts, forms
  videoToolEnabled      Boolean   @default(false)  // Can send video links/content
  
  // Integrations
  webhookUrl      String?
  webhookEvents   String[]  @default([])
  calendarEnabled Boolean   @default(false) // Enable calendar access for this agent
  
  // Calendar Configuration (agent-centric)
  calendarIntegrationId   String?   // Which calendar this agent uses
  calendarIntegration     CalendarIntegration? @relation(fields: [calendarIntegrationId], references: [id], onDelete: SetNull)
  calendarScopes          String[]  @default(["read_calendar", "create_events", "reschedule_events"])
  defaultEventTypeId      String?   // Cal.com/Calendly event type ID (stored as string for flexibility)
  defaultEventTypeName    String?   // Display name for the event type
  defaultEventDuration    Int?      @default(30) // Google Calendar duration in minutes
  
  // Status
  isActive        Boolean   @default(true)
  
  // Analytics
  totalCalls      Int       @default(0)
  avgDuration     Float     @default(0)
  
  // Relations
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  calls           Call[]
  phoneNumbers    PhoneNumber[]
  messages        Message[]
  conversations   Conversation[]
  assets          Asset[]   // Pre-uploaded media assets for this agent
  campaigns       Campaign[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([userId])
  @@index([template])
  @@index([isActive])
  @@index([communicationChannel])
  @@index([calendarIntegrationId])
}

// ============ PHONE NUMBERS ============

model PhoneNumber {
  id              String    @id @default(cuid())
  phoneNumber     String    @unique
  twilioSid       String?   // Optional - may be manually entered
  friendlyName    String?
  
  // Routing
  agentId         String?
  agent           Agent?    @relation(fields: [agentId], references: [id])
  
  // Status
  isActive        Boolean   @default(true)
  
  // Relations
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  calls           Call[]
  messages        Message[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([userId])
  @@index([agentId])
}

// ============ CONTACTS ============

model Contact {
  id           String   @id @default(cuid())
  phoneNumber  String   // Primary identifier, not unique (user-scoped)
  name         String
  notes        String?  @db.Text
  
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([userId, phoneNumber])  // One contact per phone per user
  @@index([userId])
  @@index([phoneNumber])
}

// ============ CALLS ============

model Call {
  id              String    @id @default(cuid())
  
  // Twilio IDs
  callSid         String    @unique
  streamSid       String?
  
  // Call Details
  direction       String    // inbound, outbound
  status          String    @default("initiated")
  from            String
  to              String
  
  // Timing
  startTime       DateTime?
  endTime         DateTime?
  duration        Int?
  
  // Content
  transcript      Json?
  recordingUrl    String?
  
  // S3 Storage
  recordingStorageKey    String?   // S3 object key for recording
  recordingStorageProvider String? // "s3", "twilio" (default is Twilio-hosted)
  
  // Cost & Usage
  costUsd         Decimal?  @db.Decimal(10, 4)
  minutesUsed     Decimal?  @db.Decimal(10, 2)
  
  // Quality Metrics
  avgLatency      Int?
  interruptions   Int       @default(0)
  
  // Outcome
  endReason       String?
  sentiment       String?
  summary         String?   @db.Text
  
  // Metadata
  metadata        Json?
  errorMessage    String?
  
  // Agent Snapshot (preserves agent config at time of call)
  agentName       String?
  agentVoice      String?
  agentVoiceProvider String?
  
  // Campaign tracking
  campaignId      String?
  campaignLeadId  String?
  
  // Relations
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  agentId         String?
  agent           Agent?    @relation(fields: [agentId], references: [id], onDelete: SetNull)
  
  phoneNumberId   String?
  phoneNumber     PhoneNumber? @relation(fields: [phoneNumberId], references: [id])
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([userId, createdAt])
  @@index([agentId])
  @@index([status])
  @@index([callSid])
  @@index([campaignId])
}

// ============ USAGE TRACKING ============

model UsageMetric {
  id              String    @id @default(cuid())
  
  type            String    // minutes, api_calls, stt_requests, tts_characters
  quantity        Decimal   @db.Decimal(10, 2)
  costUsd         Decimal   @db.Decimal(10, 4)
  
  metadata        Json?
  
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime  @default(now())
  
  @@index([userId, createdAt])
  @@index([type])
}

// ============ TEMPLATES ============

model PromptTemplate {
  id              String    @id @default(cuid())
  userId          String?   // null = system template
  
  name            String
  description     String?
  category        String
  
  systemPrompt    String    @db.Text
  greeting        String?
  variables       String[]  @default([])
  
  isPublic        Boolean   @default(false)
  usageCount      Int       @default(0)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([category])
  @@index([isPublic])
}

// ============ STRIPE EVENTS ============

model StripeEvent {
  id              String    @id @default(cuid())
  eventId         String    @unique
  type            String
  processed       Boolean   @default(false)
  data            Json
  
  createdAt       DateTime  @default(now())
  
  @@index([type])
  @@index([processed])
}

// ============ MESSAGES ============

model Message {
  id              String    @id @default(cuid())
  
  // Twilio ID
  messageSid      String    @unique
  
  // Message Details
  type            MessageType      @default(SMS)
  direction       MessageDirection
  status          MessageStatus    @default(QUEUED)
  from            String
  to              String
  
  // Content
  body            String?   @db.Text
  mediaUrls       String[]  @default([])  // MMS media URLs
  mediaTypes      String[]  @default([])  // MIME types for each media
  numMedia        Int       @default(0)
  
  // Timing
  sentAt          DateTime?
  deliveredAt     DateTime?
  
  // Cost & Usage
  costUsd         Decimal?  @db.Decimal(10, 4)
  numSegments     Int       @default(1)
  
  // Conversation Threading
  conversationId  String?
  conversation    Conversation? @relation(fields: [conversationId], references: [id])
  
  // Outcome / AI Response metadata
  aiGenerated     Boolean   @default(false)
  errorCode       String?
  errorMessage    String?
  
  // Metadata
  metadata        Json?
  
  // Agent Snapshot (for AI-generated messages)
  agentName       String?
  agentSystemPrompt String? @db.Text
  
  // Relations
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  agentId         String?
  agent           Agent?    @relation(fields: [agentId], references: [id], onDelete: SetNull)
  
  phoneNumberId   String?
  phoneNumber     PhoneNumber? @relation(fields: [phoneNumberId], references: [id])
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([userId, createdAt])
  @@index([conversationId])
  @@index([agentId])
  @@index([status])
  @@index([messageSid])
  @@index([from, to])
}

model Conversation {
  id              String    @id @default(cuid())
  
  // Participants
  externalNumber  String    // External phone number (customer)
  twilioNumber    String    // User's Twilio number
  
  // Context
  lastMessageAt   DateTime  @default(now())
  messageCount    Int       @default(0)
  
  // AI Conversation state (store recent messages for context)
  conversationHistory Json?
  
  // Relations
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  agentId         String?
  agent           Agent?    @relation(fields: [agentId], references: [id], onDelete: SetNull)
  
  // Denormalized agent info (preserved when agent is deleted)
  agentName       String?
  agentVoice      String?
  
  messages        Message[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@unique([userId, externalNumber, twilioNumber])
  @@index([userId])
  @@index([agentId])
  @@index([lastMessageAt])
}

// ============ CALENDAR INTEGRATIONS ============

model CalendarIntegration {
  id                    String    @id @default(cuid())
  userId                String    // Multiple calendars allowed per user
  provider              String    @default("calendly") // calendly, calcom, google
  
  // OAuth Tokens (encrypted) - used by Calendly
  accessToken           String
  refreshToken          String?
  expiresAt             DateTime?
  
  // Calendly-specific
  calendlyUserUri       String?
  calendlyUserEmail     String?
  calendlyEventTypeUri  String?
  calendlyEventTypeName String?
  
  // Cal.com-specific
  calcomApiKey          String?   // Encrypted API key
  calcomUserId          Int?
  calcomUsername        String?
  calcomUserEmail       String?
  calcomEventTypeId     Int?
  calcomEventTypeSlug   String?
  calcomEventTypeName   String?
  
  // Google Calendar-specific
  googleAccessToken     String?   // Encrypted
  googleRefreshToken    String?   // Encrypted (critical - only issued once)
  googleTokenExpiry     DateTime?
  googleCalendarId      String?   // Primary calendar ID
  googleUserEmail       String?
  
  // Settings
  timezone              String    @default("America/New_York")
  isActive              Boolean   @default(true)
  
  // Relations
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  agents                Agent[]   // Agents that use this calendar (reverse relation)
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  @@unique([userId, provider]) // One of each provider type per user
  @@index([userId])
}

// ============ ASSETS (Media for Messaging) ============

model Asset {
  id              String        @id @default(cuid())
  
  // Asset Info
  name            String        // Display name (e.g., "Product Brochure")
  description     String?       @db.Text  // Description for LLM context (helps agent know when to use it)
  category        AssetCategory @default(OTHER)
  
  // File Info
  url             String        // Public URL for Twilio to access
  mimeType        String?       // e.g., "image/jpeg", "application/pdf"
  fileSize        Int?          // Size in bytes
  
  // Storage Info (for future S3 implementation)
  // TODO: Add these fields when S3 is configured
  // storageKey    String?       // S3 object key
  // storageProvider String?     // "s3", "local", "external"
  
  // Relations
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Optional: Associate with specific agent for quick access
  agentId         String?
  agent           Agent?        @relation(fields: [agentId], references: [id], onDelete: SetNull)
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@index([userId])
  @@index([agentId])
  @@index([category])
}

// ============ CAMPAIGNS ============

model Campaign {
  id              String          @id @default(cuid())
  name            String
  description     String?         @db.Text
  
  // Agent Configuration
  agentId         String
  agent           Agent           @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  // Schedule & Pacing
  status          CampaignStatus  @default(DRAFT)
  startDate       DateTime?
  endDate         DateTime?
  callWindowStart String?         // HH:MM format (e.g. "09:00")
  callWindowEnd   String?         // HH:MM format (e.g. "17:00")
  dailyCallLimit  Int             @default(100)
  callsPerHour    Int?            // Rate limiting (null = no limit)
  minCallInterval Int             @default(30) // Seconds between calls
  
  // Retry Configuration
  maxRetryAttempts Int            @default(3)
  retryInterval    Int            @default(3600) // Seconds (default 1 hour)
  
  // Statistics
  totalLeads      Int             @default(0)
  callsCompleted  Int             @default(0)
  callsSuccessful Int             @default(0)
  callsFailed     Int             @default(0)
  leadsContacted  Int             @default(0)
  
  // Relations
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  leads           CampaignLead[]
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  @@index([userId])
  @@index([agentId])
  @@index([status])
  @@index([startDate])
}

model CampaignLead {
  id              String      @id @default(cuid())
  
  campaignId      String
  campaign        Campaign    @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  // Lead Information
  name            String?
  phoneNumber     String
  email           String?
  metadata        Json?       @default("{}") // Custom fields from CSV
  
  // Call Status
  status          LeadStatus  @default(PENDING)
  attempts        Int         @default(0)
  lastAttemptAt   DateTime?
  nextAttemptAt   DateTime?   // Scheduled time for next attempt
  
  // Call Results
  lastCallId      String?
  lastCallDuration Int?       // Seconds
  lastCallStatus  String?     // completed, failed, no-answer, busy
  outcome         String?     // answered, voicemail, no-answer, busy, failed
  notes           String?     @db.Text
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([campaignId])
  @@index([status])
  @@index([nextAttemptAt])
  @@unique([campaignId, phoneNumber]) // Prevent duplicate numbers in same campaign
}
