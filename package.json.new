{
  "name": "aicaller-saas",
  "version": "1.0.0",
  "description": "AI Voice Agent SaaS Platform - Production-ready system for creating and deploying AI voice agents",
  "private": true,
  "workspaces": [
    "shared",
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "npm run build:shared && concurrently -n backend,frontend -c blue,green \"npm run dev -w @aicaller/backend\" \"npm run dev -w @aicaller/frontend\"",
    "dev:backend": "npm run dev -w @aicaller/backend",
    "dev:frontend": "npm run dev -w @aicaller/frontend",
    "build": "npm run build:shared && npm run build -w @aicaller/backend && npm run build -w @aicaller/frontend",
    "build:shared": "npm run build -w @aicaller/shared",
    "start": "concurrently \"npm run start -w @aicaller/backend\" \"npm run start -w @aicaller/frontend\"",
    "lint": "npm run lint --workspaces",
    "prisma:generate": "npm run prisma:generate -w @aicaller/backend",
    "prisma:migrate": "npm run prisma:migrate -w @aicaller/backend",
    "prisma:studio": "npm run prisma:studio -w @aicaller/backend",
    "prisma:push": "npm run prisma:push -w @aicaller/backend",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules shared/node_modules frontend/.next backend/dist shared/dist",
    "setup": "npm install && npm run prisma:generate && npm run build:shared"
  },
  "keywords": [
    "ai",
    "voice",
    "saas",
    "twilio",
    "deepgram",
    "elevenlabs",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
